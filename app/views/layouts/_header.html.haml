#totop
%nav.navbar.navbar-custom.navbar-fixed-top{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{'data-target' => '#custom-collapse', 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      -# TODO: add farm logo instead of text
      %a.navbar-brand{href: root_path} Tucker Family Farm
    #custom-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: "#{'active' if current_page?(root_path)}"}
          = link_to 'Home', root_path
        %li.dropdown
          %a.dropdown-toggle{class: "#{'active' if current_page?(animals_path) || current_page?(orders_path)}", href: '#', 'data-toggle' => 'dropdown', 'aria-expanded' => true}
            Farm
            %span.caret
          %ul.dropdown-menu{role: 'menu'}
            %li{class: "#{'active' if current_page?(animals_path)}"}
              = link_to 'Animals', animals_path
            %li{class: "#{'active' if current_page?(orders_path)}"}
              = link_to 'Orders', orders_path
        %li{class: "#{'active' if current_page?(creamery_path)}"}
          = link_to 'Creamery', creamery_path
        %li{class: "#{'active' if current_page?(careers_path)}"}
          = link_to 'Careers', careers_path
        %li{class: "#{'active' if current_page?(gallery_path)}"}
          = link_to 'Gallery', gallery_path
        %li{class: "#{'active' if current_page?(contact_path)}"}
          = link_to 'Contact Us', contact_path
